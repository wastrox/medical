<fieldset>
				<%= f.label "Занимаемая должность"%><br />
				<%= f.text_field :position, :value => f.object.position, :class=>"recent_position validate big ", :default_value => "Какую должность Вы занимали" %>
	      <%= f.label "Компания"%><br />
				<%= f.text_field :company, :value => f.object.company, :class=>"recent_company validate", :default_value => "Компания" %>

        <%= f.label :achievements, "Ваши достижения"%><br />
				<%= f.text_area :achievements, :class => "achievements validate", :default_value => "Чем занимались и чего достигли за это время" %><br />
        
        <%= f.label "Период работы"%><br />
				с <%= f.text_field :from, :class=> "only_date validate recent_from", :value => f.object.from, :default_value => "дд/мм/гггг" %> 
				по <%= f.text_field :till, :class=> "only_date validate recent_till ", :value => f.object.till, :default_value => "дд/мм/гггг" %><br />					
			
  			<%= f.hidden_field :_destroy %>
  			<%= link_to "remove", '#', class: "remove_fields" %>
</fieldset>
