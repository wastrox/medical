<style>
	#profes-resume{
		margin: 15px 0 0 0;
	}
	fieldset {
    	border: 1px dashed black;
    	margin: 10px;
    	padding: 20px;
  	}
	.hint, .hint-pc {
		background-color: #F0F0F0;
		border-bottom-left-radius: 3px;
		border-bottom-right-radius: 3px;
		border-top-left-radius: 3px;
		border-top-right-radius: 3px;
		float: left;
		display: block;
		height: 20px;
		font-size: 14px;
		padding-bottom: 4px;
		padding-left: 0px;
		padding-right: 0px;
		margin: 0 15px 0 0;
		text-align: center;
		width: 100px;
	}
	.star, .star-pc {
		float: left;
		margin: 0 0 0 15px;	
	}
	.nav { 
		margin: 0 0 0 0;
		 } /* Строка навигации Редактировать Удалить Сделать не активным ,,,  */
	.nav-pills li a {
		/*background-color: #EEEEEE; */
		margin-right: 10px;
		} /* Строка навигации Редактировать Удалить Сделать не активным ,,, */
	.nav-pills li a.save_edit_resume{
		background-color: #99D2DE;
	    color: #FFFFFF;
	}
	.nav-pills li a.cancel_edit_resume {
		background-color: #EEEEEE;
	}
	.nav-pills li a.save_edit_resume:hover;{
		text-decoration: none;
		color: #fff;
	}
</style>

<ul class="nav nav-pills">
  	<li class=""><%= link_to("Сохранить", edit_applicant_resume_path(@resume.id), :class => 'save_edit_resume' ) %></li>
  	<li><%= link_to("Отменить", applicant_resume_path(@resume.id), :confirm => 'A you sure?', :class => 'cancel_edit_resume') %></li>
	<li><%= link_to("Удалить", applicant_resume_path(@resume.id), :method => :delete, :confirm => 'A you sure?') %></li>
	<li><a href="#">Сделать не активным</a></li>
</ul>

<div id="content-resume">
	<%= nested_form_for([:applicant, @resume], :html => { :class => 'standart_form' } ) do |applicant_fields| %>	
	<%= render :partial => 'resume', :locals => { :applicant => applicant_fields.object, :applicant_fields => applicant_fields} %>
<%= applicant_fields.submit %>
<ul class="nav nav-pills">
  	<li class=""><%= link_to("Сохранить", edit_applicant_resume_path(@resume.id), :class => 'save_edit_resume') %></li>
  	<li><%= link_to("Отменить", applicant_resume_path(@resume.id), :confirm => 'A you sure?', :class => 'cancel_edit_resume') %></li>
</ul>
<% end %>
	<div class="clear"></div>
</div>




