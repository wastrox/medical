<style>
	.lang_skill {
		margin-left: 184px;
	}
	.lang_skill input.language {
		width: 96px !important;
	}
	a.remove_nested_fields {
	    background-image: url("/assets/icon-delete.png");
	    background-position: 0 50%;
	    background-repeat: no-repeat;
	    line-height: 28px;
	    padding-bottom: 3px;
	    padding-left: 20px;
	    padding-top: 8px;
	}
</style>
<div class="person-profile">
<h3>Персональная информация</h3>
    <%= applicant_fields.fields_for :profile do |profile_fields|%>
			<%= render :partial => 'profile_fields', :locals => {:profile => profile_fields.object, :f => profile_fields} %>
		<% end %>
</div>
<div id="person-resume">
	<p>Опыт Работы</p>
        <%= applicant_fields.fields_for :experiences do |experience_fields| %>
          <%= render :partial => "experience_fields", :locals => {:experience => experience_fields.object, :f => experience_fields}  %>
        <%end %>
        <%= applicant_fields.link_to_add "Добавить место работы", :experiences %>

	<p>Образование</p>
      <%= applicant_fields.fields_for :educations do |education_fields| %>
        <%= render :partial => "education_fields", :locals => {:education => education_fields.object, :f => education_fields}  %>
      <% end %>
      <%= applicant_fields.link_to_add "Добавить место учебы", :educations %>

  <div>
	<p style='width: 100px; float:left;'>Знание языков</p>
	 <%= applicant_fields.fields_for :languages do |language_fields| %>
	                <%= render :partial => "language_skill_fields", :locals =>  {:language => language_fields.object, :f => language_fields} %>
	 <% end %>
  </div>
	<%= applicant_fields.link_to_add "Добавить языки", :languages, :id => "add_lang_skill" %>
	<div>
		<input type="checkbox">Защита персональных данных</input>
	</div>
</div>
