<style>
	.lang_skill {
		margin-left: 184px;
	}
	.lang_skill input.language {
		width: 96px !important;
	}
	a.remove_nested_fields {
	    background-image: url("/assets/icon-delete.png");
	    background-position: 0 50%;
	    background-repeat: no-repeat;
	    line-height: 28px;
	    padding-bottom: 3px;
	    padding-left: 20px;
	    padding-top: 8px;
	}
</style>
<hr />

<div class="person-profile">
    <%= applicant_fields.fields_for :profile do |profile_fields|%>
			<%= render :partial => 'profile_fields', :locals => {:profile => profile_fields.object, :f => profile_fields} %>
		<% end %>
</div>
	<div class='item'>
		<%= applicant_fields.label 'Желаемая должность'%>
		<div class='field'>
			<%= applicant_fields.text_field :position, :value => "#{@resume.position}" %>
		</div>
	</div>
	<div class='item'>
		<%= applicant_fields.label 'Желаемый город' %>
		<div class='field'>
			<%= applicant_fields.text_field :city, :value => "#{@resume.city}" %>
		</div>
	</div>
	<div class='item'>
		<%= applicant_fields.label 'Желаемая зарплата'%>
		<div class='field'>
			<%= applicant_fields.text_field :salary, :value => "#{@resume.salary}", :class => "salary" %>
			<i class="currency">грн</i>
		</div>
	</div>
<div id="person-resume">
	<hr />
	<h5 id="experiences">Опыт Работы</h5>
				
        <%= applicant_fields.fields_for :experiences do |experience_fields| %>
          <%= render :partial => "experience_fields", :locals => {:experience => experience_fields.object, :f => experience_fields}  %>
        <%end %>
		<%= applicant_fields.link_to_add "Добавить место работы", :experiences, :class => "add_fields_for" %>
    <hr />
	<h5 id="educations">Образование</h5>
      <%= applicant_fields.fields_for :educations do |education_fields| %>
        <%= render :partial => "education_fields", :locals => {:education => education_fields.object, :f => education_fields}  %>
      <% end %>
      <%= applicant_fields.link_to_add "Добавить место учебы", :educations, :class => "add_fields_for" %>

		<hr />
		<div class='item'>
			<%= applicant_fields.label 'Дополнительная информация' %>
			<div class='field'>
				<%= applicant_fields.text_area :additional_info, :value => "#{@resume.additional_info}" %>
			</div>
		</div>
	<div>
		<input type="checkbox">Защита персональных данных</input>
	</div>
</div>
