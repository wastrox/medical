$(".student_now:checkbox").click(function(){
    var check = $(this).attr('checked');
    var parent_date = $(this).parent().parent().find(".year_till");
    if (check == "checked") {
        $(parent_date).css('display', 'none');
    }
    else{
        $(parent_date).css('display', 'inline');
    }
 });
</script>
