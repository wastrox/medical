<fieldset>
				<%= f.label :college, "Название вуза"%>
				<%= f.text_field :college, :value => f.object.college, :class=>"college validate", :default_value => "Название учебного заведения" %>
				<%= f.label :profession, "Специальность" %>
				<%= f.text_field :profession, :value => f.object.profession, :class=>"recent_company validate", :default_value => "Специальность" %>
				<%= f.label :faculty, "Факультет"%>
				<%= f.text_field :faculty, :value => f.object.faculty, :class=>"validate", :default_value => "Факультет" %>
				<%= f.label :diploma, "Диплом/степень"%>
				<%= f.text_field :diploma, :class => "diploma validate", :default_value => "Диплом/степень" %><br />	
				
			  <%= f.label "Год окончания:" %>	
				<%= f.text_field :till, :class=> "only_year recent_till" %><br />
				<%= f.check_box :student %><%= f.label :student, "Еще учусь" %>
		
  			<%= f.hidden_field :_destroy %>
  			<%= link_to "remove", '#', class: "remove_fields" %>
				<%= %>
</fieldset>
