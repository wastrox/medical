 <script>
    $( ".datepicker" ).datepicker({
      changeMonth: true,
      changeYear: true,
      dateFormat: "dd/mm/yy",
      shortYearCutoff: 50
    }); 
</script>

<%= form_for([:applicant, @profile], :html => { :class => 'standart_form' }) do |f| %>
	<div class='item'>
		<%= f.label 'Фамилия' %>
		<div class='field'>
			<%= f.text_field :lastname, :value => "#{@profile.lastname}" %>
		</div>
	</div>
	<div class='item'>
		<%= f.label 'Имя' %>
		<div class='field'>
			<%= f.text_field :firstname, :value => "#{@profile.firstname}" %>
		</div>
	</div>
	<div class='item'>
		<%= f.label 'Отчество' %>
		<div class='field'>
			<%= f.text_field :surename, :value => "#{@profile.surename}"%>
		</div>
	</div>
	<div class='item'>
		<%= f.label 'Дата рождения' %>
		<div class='field'>
			<%= f.text_field :date, :value => "#{@profile.date}", :class => "datepicker", :placeholder => " дд/мм/гггг" %>
		</div>
	</div>
	<div class='item' style="margin-bottom: 0px;">
		<%= f.label 'Мобильный телефон' %>
		<div class='field'>
			<%= f.text_field :phone, :value => "#{@profile.phone}" %>
		</div>
	</div>
		<div class='item' style="margin-bottom: 0px;">
   		<%= f.label 'Фото' %>
   			<div class='field'>
      		<%= image_tag @profile.photo.url(:small) %>
      		<%= f.file_field :photo %>
    		</div>
  	</div>
	<div class="buttons">
		<%= f.submit 'Сохранить', :class => "save_edit_button button_profile" %>
	</div>
<% end %>
