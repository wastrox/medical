<% @vacancies_hot.each do |vacancy|%>
	<div class="hot-content">
			<h3><%= "#{vacancy.name.split[0..1].join(" ")}" %></h3>

			<div class="hot-description">
				<p><%= "#{vacancy.hot_vacancy.description}" unless vacancy.hot_vacancy.nil? %></p>
			</div>

            <p><%= link_to "Подробнее", {:controller => "search", :action => "vacancy", :scope => Russian.translit(vacancy.category.scope.title).downcase, :category => Russian.translit(vacancy.category.name).downcase, :id => vacancy.to_param} %></p>

	</div>
<% end %>