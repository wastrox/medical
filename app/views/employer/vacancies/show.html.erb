<div class="cap">
	<img src="/assets/red-pencil.png" class="icon-red-pencil"><%= link_to "Редактировать", edit_employer_vacancy_path(@vacancy) %>
	<img src="/assets/delete.png" class="icon-delete"><%= link_to("Удалить", employer_vacancy_path(@vacancy), :method => :delete, :confirm => 'Вы, уверены, что хотите удалить вакасию') %>
	<img src="/assets/cancel.png" class="icon-cancel"><%= link_to "Скрыть", :controller => "employer/vacancies", :action => :defer, :id => @vacancy.id %>
</div>

<div class="boxed">
<%# @vacancy.company.company_contacts.collect {|p| ["#{p.name} - #{p.phone}"] }%>

	<table cellpadding="0" cellspacing="0" class="photo-name-employer">
		<tr>
			<td><%= image_tag @vacancy.company.logo.url(:small), :class => "photo-employer" %></td>
			<td><h2>&#171;<%= @vacancy.company.name %>&#187;</h2></td>
		</tr>
	</table>
    <table class="paper company" border="0" cellpadding="10">
                        <tr>
                        	<td>Должность</td>
	                        <td><%= @vacancy.name %></td>
                        </tr>
						<tr>
							<td>Зарплата</td>
							<td><%= @vacancy.salary %></td>
						</tr>
                        <tr>
                        	<td>Регион</td>
                        	<td><%= @vacancy.city %></td>
                        </tr>
                        <tr>
                        	<td>Опыт работы</td>
                        	<td><%= @vacancy.experiences %></td>
                        </tr>
                        <tr>
                        	<td>График работы</td>
                        	<td>
                                  <%# if @vacancy.timetable == "Другой вариант" %>
                                    <%#= @vacancy.timetable_other %>
                                  <%# else %>
                                    <%= @vacancy.timetable %>
                                  <%# end %>
                              </td>
                        </tr>
                        <tr>
                        	<td>Описание вакансии</td>
                        	<td><%= raw @vacancy.description %></td>
                        </tr>
                        <tr>
                        	<th colspan="2" class="line-bottom"></th>
                        </tr>
                        <tr>
                        	<td>Контактная информация</td>
                        	<td> <% @vacancy.company.company_contacts.each do |contact| %>
                        			<div><%= "#{contact.name}: #{contact.phone}" %></v>
                        		 <% end %>
                        	</td>
                        </tr>
				</table>    
</div>

