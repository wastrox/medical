<div class="cap">
	<img src="/assets/save.png" class="icon-save"><a href="#" class="save-link">Сохранить</a>
	<img src="/assets/cancel.png" class="icon-cancel"><%= link_to "Отменить", employer_vacancies_url %>
</div>

<div class="boxed">

	<%= form_for([:employer, @vacancy], :html => {:class => "standart_form"}) do |f| %>
		<h2>Создание вакансии</h2>
		<%= render "form", { :f => f } %>

		<span class="line-bottom line-bottom-company"></span>

		<div id="button-bottom">
			<%= f.submit "Опубликовать", :class => "input-sub btn btn-warning", :name => "save" %>
			<%= f.submit "Сохранить как черновик", :name => "save_draft", :class => "input-sub btn save-as" %>
		</div>
	<% end %>
</div>