<%= employer_fields.fields_for :company_contacts do |f| %>
	<div class='item'>
		<%= f.label :name, "Имя" %>
		<div class='field'>
			<%= f.text_field :name %>
		</div>
	</div>
	<div class='item'>
		<%= f.label :phone, "Телефон" %>
		<div class='field'>
			<%= f.text_field :phone %>
		</div>
	</div>

	<%= f.hidden_field :_destroy %><%= f.link_to_remove "Удалить контакты", :class => "red-link remove-link-contact-company" %>
	<div class="clearfix"></div>
<% end %>

<div class="add_company_contacts"><%= employer_fields.link_to_add "Добавить контакты", :company_contacts, :class => "yellow-link"  %></div>
<div class="clearfix"></div>
