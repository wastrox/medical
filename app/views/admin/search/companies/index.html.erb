<%= form_tag admin_search_companies_path, :class => 'form-search', method: :get do %>
	<div class="input-append">
		<%= text_field_tag :search, params[:search], :class => "span2 search-query searchInput" %>
	    <%= submit_tag "Найти", name: nil, :class => "btn searchButton" %>
	</div>
<% end %>

<table class="table">
  <tr>
    <th>Название компании</th>
    <th>Сайт</th>
    <th>Статус</th>
  </tr>
<% @companies.each do |company| %>
  <tr>
    <td><%= link_to company.name, edit_admin_companies_profile_path(company.id) %></td>
    <td><%= company.site %></td>
  	<td><%= company.human_state_name %></td>
  </tr>
<% end %>
</table>

