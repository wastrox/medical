<style>
/*FIXME: STYLE CSS transfer on assets/stylesheets*/

	.create-button a {
			font-size: 1.55em;
			float: left;
			padding-right: 10px;
	}
	.create-resume{
			padding: 30px;
			background: none;
			border: 1px solid #767676;
			border-radius: 10px;	
	}		
	.form-search {
		margin-bottom: 25px;
	}
	.searchInput {
		width: 246px !important;
	}
	.searchButton {
		padding-bottom: 6px;
	}
	
</style>
<%= form_tag admin_search_resumes_path, :class => 'form-search', method: :get do %>
	<div class="input-append">
		<%= text_field_tag :search, params[:search], :class => "span2 search-query searchInput" %>
	    <%= submit_tag "Найти", position: nil, :class => "btn searchButton" %>
	</div>
<% end %>

<table class="table">
  <tr>
    <th>Название резюме</th>
    <th>З/П</th>
    <th>Регион</th>
  <th></th>
  </tr>

<% @resumes.each do |resume| %>
  <tr>
    <td><%= resume.position %></td>
    <td><%= resume.salary %></td>
  	<td><%= resume.city %></td>
    <td><%= link_to 'Просмотр', edit_admin_resume_path(resume.id) %></td>
  </tr>
<% end %>
</table>

