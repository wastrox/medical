<%= render :partial => "admin/companies/navbar_company"%>
<div class="content-company">	
	<%= nested_form_for(@company, :url => {:action=>"update", :controller=>"admin/companies/profile"}, :html => { :class => 'standart_form' } ) do |employer_fields| %>
		<%= render :partial => 'employer_state' %>
  		<%= render :partial => 'employer/profile_companies/profile_fields', :locals => { :employer => employer_fields.object, :employer_fields => employer_fields} %>
	
		<h5>Контактная информация</h5>
		<%= render :partial => 'employer/profile_companies/contact_fields', :locals => { :employer => employer_fields.object, :employer_fields => employer_fields}%>
		<h5>Сообщение от модератора</h5>
		<%= text_area_tag 'body_letter', nil, :class => "body_letter" %>
		<ul class="nav nav-pills">
			<li><%= employer_fields.submit "Обновить", :class => "save_edit_button", :name => "update" %></li>
			<li><%= employer_fields.submit "Опубликовать", :class => "save_edit_button", :name => "published" unless @company.published? %></li>
			<li><%# link_to("Удалить", admin_companies_profile_path(@company), :method => :delete, :confirm => 'Вы, уверены, что хотите удалить компанию?') %>
				<%= employer_fields.submit "Удалить", :class => "save_edit_button", :name => "destroy",  :confirm => 'Вы, уверены, что хотите удалить компанию?' %></li>
			<li><%= employer_fields.submit "Отклонить", :class => "save_edit_button", :name => "reject",  :confirm => 'Вы, уверены, хотите отменить компанию?' %></li>
	<% end %>
</div>