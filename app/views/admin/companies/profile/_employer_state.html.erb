<h2>Работодатель</h2>

<div class='item'>
	<%= label_tag "Статус" %>
	<div class='field'>
		<i><%= @company.human_state_name%></i>
	</div>
</div>
<!--<div class='item'>
	<%# label_tag "Email" %>
