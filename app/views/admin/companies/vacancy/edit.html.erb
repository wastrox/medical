<style>
	.disable {
		display: none;
	}
</style>


<%= render :partial => "admin/companies/navbar_company"%>
<%= @message %>
<%= form_for([:admin, :companies, @vacancy], :html => {:class => "standart_form"}) do |f| %>
	<%= render :partial => "employer/vacancies/form", :locals => { :f => f } %>
	<%# content_tag("h5", "Компания не прошла модерацию") if @company.pending? %>
	<%= f.submit "Обновить", :class => "save_edit_button", :name => "update" %>
	<%= f.submit "Опубликовать", :class => helpers_class(@company), :name => "published" unless @vacancy.published? %>  
	<%= link_to("Удалить", admin_companies_vacancy_path(@vacancy), :method => :delete, :confirm => 'Вы, уверены, что хотите удалить вакансию?') %>
	<%= 
		link_to_unless(@vacancy.rejected?, "Отклонить", { :controller => 'admin/companies/vacancy', :action => :reject, :id => @vacancy.id }, :confirm => 'Вы, уверены, что хотите отклонить вакансию?') do
			"Отклонена"
		end
	%>
<% end %>