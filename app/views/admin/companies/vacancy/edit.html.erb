<style>
	.disable {
		display: none;
	}
</style>

<%= render :partial => "admin/companies/navbar_company"%>
<%= @message %>
<%= form_for([:admin, :companies, @vacancy], :html => {:class => "standart_form"}) do |f| %>
	<div class='item'>
		<%= label_tag "Статус вакансии" %>
		<div class='field'>
			<i><%= @vacancy.human_state_name %></i>
		</div>
	</div>
	<div class='item'>
		<%= label_tag "Статус компании" %>
		<div class='field'>
			<i><%= @company.human_state_name %></i>
		</div>
	</div>
	<%= render :partial => "employer/vacancies/form", :locals => { :f => f } %>
	<h5>Сообщение от модератора</h5>
	<%= text_area_tag 'body_letter', nil, :class => "body_letter" %>
	<ul class="nav nav-pills">
		<li><%= f.submit "Обновить", :class => "save_edit_button", :name => "update" %></li>
		<li><%= f.submit "Опубликовать", :class => helpers_class(@company), :name => "published" unless @vacancy.published? %></li> 
		<li><%= f.submit "Отклонить", :class => "save_edit_button", :name => "reject",  :confirm => 'Вы, уверены, хотите отменить компанию?' unless @company.rejected? %></li>
		<li><%= f.submit "Удалить", :class => "save_edit_button", :name => "destroy",  :confirm => 'Вы, уверены, что хотите удалить компанию?' %></li>
	</ul>
<% end %>