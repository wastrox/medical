<%= form_for ([:admin, task]), remote: true do |f| %>
	<%= f.check_box :complete %>
	<%= f.submit "Update" %>
	<%= label_tag task.description %>
	<%= link_to ([:admin, task]), method: :delete, remote: true, :confirm => "Удалить задачу?", :class => "delte-vacancy-respond" do %>
		<img src="/assets/delete.png" class="delte-vacancy-respond">
	<% end %>

<% end %>