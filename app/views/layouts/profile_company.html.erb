<!DOCTYPE html>
<html>
<head>
  <title>Medical</title>
  <!--[if IE]><script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
  <%= stylesheet_link_tag "style", "bootstrap_buttons", "selectbox", "jquery-ui/jquery-ui-1.9.2.custom", "bootstrap-table", :media => "all" %>
  <%= javascript_include_tag "jquery-1.9.1.min", "application", "calendar", "jquery-ui/jquery-ui-1.9.1.custom.min.js", "jquery.inputmask", "selectbox-for-nestedform", "standart_form", "selectbox" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="notice"><p><%= flash[:notice] %></p></div>

<div id="wrapper">
	<header id="header">
		<a href="/"><img alt="" class="logo" src="/assets/logo-netbee.png"></a>
		<div id="menu">
			<div class="my-profile">
				<%= link_to_if(current_user.company.nil?, "Профиль компании", new_employer_profile_company_path) do 
					link_to "Профиль компании", employer_profile_companies_url
				end %>
			</div>
			<div class="separator"></div>
			<%= link_to "Выйти", logout_url, :class => "signup" %>
		</div>
	</header><!-- #header-->
	<div id="content">
		<div id="frame">
			<%= yield %>
		</div><!-- #frame -->

		<div id="account-nav">
			<div class="cap">
				<%= link_to_if(current_user.company.nil?, current_user.email, new_employer_profile_company_path) do
						link_to current_user.email, employer_profile_companies_url
						end %>
			</div>
			<div class="boxed-nav">
				<ul>
					<li><%= link_to_if(current_user.company.nil?, "Компания", new_employer_profile_company_path) do
						link_to "Профиль", employer_profile_companies_url
						end %>
					</li>
					<span class="line-bottom"></span>
					<li><%= link_to_if(current_user.company?, "Список вакансий", employer_vacancies_path) do 
							link_to "Список вакансий", new_employer_profile_company_path, :title => "Сначала создайте профиль компании" 
						end %>
					</li>
					<span class="line-bottom"></span>
					<li><%= link_to_if(current_user.company?, "Добавить вакансию", new_employer_vacancy_path) do
							link_to "Добавить вакансию", new_employer_profile_company_path, :title => "Сначала создайте профиль компании"
						end %>
					</li>
				</ul>
			</div>
		</div>
		<div class="clear"></div>
	</div><!-- #content-->
</div><!-- #wrapper -->

<footer id="footer">
	<div class="social-networks">
		<h3>Мы в социальных сетях</h3>
		<div class="icon">
			<img alt="facebook" class="facebook" src="img/icon-facebook.png">
			<img alt="twitter" class="twitter" src="img/icon-twitter.png">
			<img alt="vk" class="vk" src="img/icon-vk.png">
		</div>
		<p>Design by Olga Jour, 2013</p>
	</div>	
</footer><!-- #footer -->
</body>
</html>
