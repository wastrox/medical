        <div class="link-navigate">
            <h2 class="title">Регистрация</h2>
            <%= link_to "Вход", login_url %>
        </div>
        <div id="content">
        <%= form_for @account do |f| %>
          <% if @account.errors.any? %>
            <div class="error_messages">
              <ul>
                <% for message in @account.errors.full_messages %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="item">
            <div class="field">
              <%= f.label :email %>
              <%= f.text_field :email %>
            </div>
          </div>
          <div class="item">
            <div class="field">
              <%= f.label :password, "Пароль" %>
              <%= f.password_field :password %>
            </div>
          </div>
          <br/>
          <%= f.submit "Зарегистрироваться", :class => "input-sub btn btn-warning" %>
        <% end %>
        </div><!-- #content-->